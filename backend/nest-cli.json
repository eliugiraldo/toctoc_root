  "$schema": "https://json.schemastore.org/nest-cli.json",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "tsConfigPath": "tsconfig.build.json",
    "builder": "webpack",
    "plugins": ["@nestjs/swagger"],
    "assets": ["**/*.hbs"],
    "watchAssets": true
  }
}